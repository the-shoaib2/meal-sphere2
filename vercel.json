{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/_next/static/(.*)",
      "dest": "/_next/static/$1"
    },
    {
      "src": "/_next/image/(.*)",
      "dest": "/_next/image/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "build": {
    "env": {
      "NEXT_PUBLIC_APP_URL": "https://meal-sphere.vercel.app"
    }
  },
  "env": {
    "NEXTAUTH_URL": "https://meal-sphere.vercel.app",
    "NEXTAUTH_SECRET": "@nextauth_secret"
  },
  "devCommand": "next dev --port 3000"
}
